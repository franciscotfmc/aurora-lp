<div class="formulario-contato">
  <button class="action-button" onclick="window['<%= buttonId %>'].showModal();">
    Fale com a gente!
  </button>

  <div class="d-container">
    <dialog id="<%= buttonId %>">
      <button onclick="closeModal('<%= buttonId %>')" aria-label="close" class="x">❌</button>

      <form id="form<%= buttonId %>" class="form">
        <h2>
          Converse agora com alguém da nossa equipe e tire suas dúvidas!
        </h2>

        <input id="nome<%= buttonId %>" type="text" name="nome" placeholder="Nome completo" required>

        <input id="email<%= buttonId %>" type="email" name="email" placeholder="E-mail"
          pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" required>

        <input id="telefone<%= buttonId %>" type="text" name="telefone" placeholder="(31) 9 0000-0000"
          pattern="\([0-9]{2}\) [0-9]{4,6}-[0-9]{3,5}$" title="Exemplos: (99) 95555-5555 ou (99) 9999-9999"
          oninput="handlePhoneInput(event)" required>

        <button type="action" class="action-button-form" onclick="postLead('<%= buttonId %>', event)">
          <span id="action<%= buttonId %>">Enviar</span>
          <i id="loading<%= buttonId %>" class=""></i>
        </button>
      </form>

      <div id="feedback<%= buttonId %>" class="feedback">
        <h2>Agende agora sua consulta!</h2>

        <a id="agendar-conceito-<%= buttonId %>" class="action-button-whatsapp-modal" target="_blank"
          onclick="gtag_report_conversion('AW-10877445993/nu9eCO6is84DEOnO4sIo')"
          href="https://api.whatsapp.com/send?phone=553135002591&amp;text=">
          <span>Ir para o Whatsapp</span>
        </a>
      </div>
    </dialog>
  </div>
</div>